<div class="container" style= "text-align:center">
<h1 style="color: #2E1114; text-align:center">Edit Spellbook</h1>

    <% if @spellbook.errors.any? %>
    <div style="list-style-type:none; color: #2E1114; text-align:center" id="error explanation">
        <h2 style="list-style-type:none; color: #2E1114; text-align:center"><%= pluralize(@spellbook.errors.count, "error") %> prevented this Spellbook from being saved: </h2>
        <ul style="list-style-type:none; color: #2E1114; text-align:center">
        <% @spellbook.errors.full_messages.each do |error| %>
        <li> <%= error %></li>
        <% end %>
        </ul>
    </div>
    <% end %>

    <%= form_for @spellbook do |f| %>
        <%= render partial: "form", locals: {partial_form: f }%>
    <%= f.submit "Update your spellbook" %>
    <% end %>
</div>

