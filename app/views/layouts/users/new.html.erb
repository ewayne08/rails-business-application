<div class="container">
  <h1 style="color: #2E1114; text-align:center">Sign Up!</h1>
  <div style="color: #2E1114; text-align:center">
    <%= form_for @user do |f| %>
    <%= f.label :username %>
    <%= f.text_field :username %> <br>
    <%= f.label :password %>
    <%= f.password_field :password%> <br>
    <%= f.label :email %>
    <%= f.email_field :email %> <br>
    <%= f.label :profile_pic %>
    <%= f.text_field :profile_pic %> <br>
    <%= f.label :bio %>
    <%= f.text_field :bio %> <br>
    <%= f.submit "Sign Up" %>
    <% end %>
    </div>
</div>
